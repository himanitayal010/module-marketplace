                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Hts_Marketplace::config_marketplace" title="Marketplace Configuration Section" sortOrder="50" />
